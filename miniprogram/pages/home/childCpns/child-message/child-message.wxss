.home-message {
  border-top: 10rpx solid #eee;

  background-color: rgba(255, 255, 255, 1.000000);
  height: 110rpx;
  margin-top: 12rpx;
  display: flex;
  flex-direction: column;
  width: 750rpx;
}

.home-message-item {
  width: 156rpx;
  height: 42rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  margin: 42rpx 0 0 30rpx;
}

.home-message-font {
  width: 156rpx;
  height: 38rpx;
  overflow-wrap: break-word;
  color: rgba(34, 34, 34, 1);
  font-size: 40rpx;
  font-family: PingFangSC-Medium;
  text-align: center;
  white-space: nowrap;
  line-height: 40rpx;
  display: block;
}

.home-message-view {
  background-color: rgba(20, 110, 240, 0.700000);
  width: 154rpx;
  height: 16rpx;
  margin-top: -12rpx;
  display: flex;
  flex-direction: column;
}