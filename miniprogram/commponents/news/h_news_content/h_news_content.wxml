<!--components/news_content/news_content.wxml-->
<view class="box1" wx:if="{{0 == index}}">
  <view class="box2" wx:for="{{notice}}" wx:key="index" bind:tap="handleJump" data-index="{{index}}">
    <view class="section1">
      <view class="main5">
        <text class="infoBox1">{{item.text}}</text>
        <view class="mod2">
          <text class="txt4">{{item.time}}</text>
        </view>
      </view>
      <view class="main6">
        <image src="{{imageNotice}}" class="pic2"></image>
      </view>
    </view>
  </view>
</view>

<view class="box1" wx:if="{{1 == index}}">
  <view class="box2" wx:for="{{media}}" wx:key="index" bind:tap="handleJump1" data-index="{{index}}">
    <view class="section1">
      <view class="main5">
        <text lines="1" class="infoBox1">{{item.text}}</text>
        <view class="box4">
          <text lines="1" class="txt4">{{item.time}}</text>
        </view>
      </view>
      <view class="main6">
        <image src="{{imageSchool}}" class="pic2"></image>
      </view>
    </view>
  </view>
</view>

