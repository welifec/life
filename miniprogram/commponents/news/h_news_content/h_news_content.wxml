      </view>
    </view>
  </view>
</view>

<view class="box1" wx:if="{{3 == index}}">
  <view class="box2" wx:for="{{dynamic}}" wx:key="index" bind:tap="handleJump3" data-index="{{index}}">
    <view class="section1">
      <view class="main5">
        <text lines="1" class="infoBox1">{{item.text}}</text>
        <view class="box4">
          <text lines="1" class="txt4">{{item.time}}</text>
        </view>
      </view>
      <view class="main6">
        <image src="{{imageDynamic}}" class="pic2"></image>
